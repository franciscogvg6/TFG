<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="#2B54BD">

        <TextView
            android:id="@+id/ordenuser"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/ordenfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y hora"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_below="@+id/ordenuser"
            android:layout_marginTop="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_productos_orden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordenfecha"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/confirmar"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_rounded"
            android:layout_below="@id/recycler_productos_orden"
            android:backgroundTint="#CA1616"
            android:text="Enviada" />



    </RelativeLayout>

</RelativeLayout>
